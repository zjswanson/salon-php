{% extends "home_template.html.twig" %}

    {% block controls %}
    <h2>Manager options:</h2>
    <div class="panel panel-info">
        <div class="panel-heading">
            <h3>Navigation</h3>
        </div>
        <div class="panel-body">
            <form method="get">
                <button class="btn btn-info" type="submit" name="home" formaction="/">Back to Stylist List</button>
                <button class="btn btn-info" type="submit" name="clients" formaction="/clients/{{client.getStylistId}}">Go to {{client.getClientName}}'s Stylist's page</button>
            </form>
        </div>
        <div class="panel-heading">
            <h3>Delete Client</h3>
        </div>
        <div class="panel-body">
            <form action="/delete_client/{{client.getId}}" method="post">
                <input type="hidden" name="_method" value="delete">
                <button class="btn btn-danger" type="submit" name="delete">Delete Client</button>
                <p> Warning!  This action cannot be undone! </p>
            </form>
        </div>
    </div>
    {% endblock %}

    {% block list %}
    <!-- edit form -->
        <h2>Update Client:</h2>
        <div class="panel panel-info">
            <div class="panel-heading">
                <h2>Client's Stylist: {{stylist.getStylistName()}}</h2>
            </div>
            <div class="panel-body">
                <form action="/client_edit/{{client.getId}}" method="post">
                    <input name="_method" type="hidden"  value="patch">

                    <div class="form-group">
                        <h2>Client Name: {{client.getClientName}}</h2>
                        <label for="client_name">Change Client Name</label>
                        <input type="text" name="client_name">
                    </div>
                    <div class="form-group">
                        <h2>Client's Next Appointment: {{client.getNextAppointment | date("D, M y g:i A")}}</h2>
                        <label for="next_appointment">Change Next Appointment</label>
                        <input type="datetime-local" name="next_appointment">
                    </div>
                    <button class="btn btn-info" type="submit" name="button">Update Client</button>
                </form>
            </div>
        </div>
    {% endblock %}
